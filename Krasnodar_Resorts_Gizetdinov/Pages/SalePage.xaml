<Page x:Class="Krasnodar_Resorts_Gizetdinov.Pages.SalePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Krasnodar_Resorts_Gizetdinov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SalePage">

    <Grid>
        <Rectangle Fill="White" Stroke="#201F4E" StrokeThickness="3" RadiusX="10" RadiusY="10" HorizontalAlignment="Left" Height="316" VerticalAlignment="Top" Width="414" Margin="292,58,0,0"/>
        <Image HorizontalAlignment="Left" Height="153" Margin="421,69,0,0" VerticalAlignment="Top" Width="164" Source="Res/Icons/Saleicon.png"/>
        <ListView x:Name="SaleList" Margin="308,184,105,90" BorderBrush="White">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <Image x:Name="image_Icon" Source=""/>
                        <TextBlock x:Name="textblock_Cost"/>
                        <TextBlock x:Name="textblock_Description"/>
                        <Button x:Name="btn_Pay"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </Grid>
</Page>
